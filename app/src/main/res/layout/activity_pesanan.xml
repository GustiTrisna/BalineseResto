<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_pesanan">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/order"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/image_pesanan"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"

        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/nama_pesanan"
        android:layout_marginTop="200dp"
        android:text="Klepon"
        android:textColor="#000"
        android:textSize="15dp"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp."
        android:textColor="#000"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="200dp"
        android:textSize="15dp"
        />

    <EditText
        android:id="@+id/harga_pesanan"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama_pesanan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:text="500000"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="15dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/kurang_pesanan"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="300dp"
        android:text="-"
        android:textAlignment="center"
        android:textSize="20dp"
        android:onClick="kurang"
        />

    <EditText
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/counter_pesanan"
        android:text="0"
        android:textAlignment="center"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="100dp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/tambah_pesanan"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="260dp"
        android:text="+"
        android:textSize="20dp"
        android:textAlignment="center"
        android:onClick="tambah"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/order_pesanan"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="Order"
        android:onClick="order"
        />

</RelativeLayout>